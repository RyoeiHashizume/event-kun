<div class="signup">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<table calss ="signup_table">

  <tr>
  <div class="field">
    <td><%= f.label :user_name, "名前" %></td>
    <th><%= f.text_field :user_name, :placeholder => "User name"%></th>
  </div>
  </tr>

  <tr>
  <div class="field">
    <td><%= f.label :company_number, "社員番号" %></td>
    <th><%= f.number_field :company_number, :placeholder => "6桁の社員番号を入力してください"%></th>
  </div>
  </tr>


  <tr>
  <div class="field">
    <td><%= f.label :email ,"連絡先" %></td>
    <th><%= f.email_field :email, autofocus: true, :placeholder => "email" %></th>
  </div>
  </tr>

  <tr>
  <div class="field">
    <td><%= f.label :kanji, "幹事"%></td>
    <th><%= f.check_box :kanji %> 幹事の方はチェックをお願いします</th>
  </div>
  </tr>

  <tr>
  <div class="field">
    <td><%= f.label :gender, "性別"%></td>
    <th><%= f.check_box :gender %> 男性の方はチェックをお願いします</th>
  </div>
  </tr>

  <tr>
  <div class="field">
    <br />
    <td><%= f.label :password, "新しいパスワード"%> </td>
    <% if @minimum_password_length %>
    <% end %> <%# <br /> %>
    <th><%= f.password_field :password, autocomplete: "off", :placeholder => "Password (6minimum characters)" %></th>
  </div>
  </tr>

  <tr>
  <div class="field">
    <br />
    <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
    <th><%= f.password_field :password_confirmation , autocomplete: "off" %></th>
  </div>
  </tr>

</table>
  <br/>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>