<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :user_name, "名前" %><br />
    <%= f.text_field :user_name, :placeholder => "User name"%>
  </div>

  <div class="field">
    <%= f.label :company_number, "社員番号" %><br />
    <%= f.number_field :company_number, :placeholder => "6桁の社員番号を入力してください"%>
  </div>


  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, :placeholder => "User name" , autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :kanji, "幹事"%><br />
    <%= f.check_box :kanji %> 幹事の方はチェックをお願いします
  </div>

  <div class="field">
    <%= f.label :gender, "性別"%><br />
    <%= f.check_box :gender %> 男性の方はチェックをお願いします
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, :placeholder => "Password (6minimum characters)" , autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
