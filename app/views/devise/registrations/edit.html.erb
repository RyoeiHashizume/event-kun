<div class="edit">
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
<ul calss ="edit_table">
  <li>
  <div class="field">
    <label for="name"><%= f.label :user_name, "名前" %></label>
    <div class="monokuma"><%= f.text_field :user_name, :placeholder => "User name" , :size=>"27"%></div>
  </div>
  </li>

  <li>
  <div class="field">
    <label for="num"><%= f.label :company_number, "社員番号" %></label>
    <div class="monokuma">
      <%= f.number_field :company_number, :placeholder => "6桁の社員番号を入力してください" , 
                         :maxlength =>"6" , :size=>"27" %>
    </div>
  </div>
  </li>

  <li>
  <div class="field">
    <label for="tel"><%= f.label :email ,"連絡先" %></label>
    <div class="monokuma">
      <%= f.email_field :email, autofocus: true, :placeholder => "email" , :size=>"27" %>
    </div>
  </div>
  </li>

  <li>
  <div class="field">
    <label for="kanji"><%= f.label :kanji, "幹事"%></label>
    <div class="monokuma"><%= f.check_box :kanji %> 幹事の方はチェックをお願いします</div>
  </div>
  </li>

  <li>
  <div class="field">
    <label for="gender"><%= f.label :gender, "性別"%></label>
    <div class="monokuma"><%= f.check_box :gender %> 男性の方はチェックをお願いします</div>
  </div>
  </li>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <li>
  <div class="field">
    <br />
    <label for="pass"><%= f.label :password, "新しいパスワード"%> </label>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <div class="monokuma">
      <%= f.password_field :password, autocomplete: "off", :placeholder => "Password (6minimum characters)" , :size=>"27" %>
    </div>
  </div>
  </li>

  <li>
  <div class="field">
    <br />
    <label for="newpass"><%= f.label :password_confirmation, "新しいパスワード(確認用)"%></label>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <div class="monokuma">
      <%= f.password_field :password_confirmation, autocomplete: "off",
                           :placeholder => "Password (6minimum characters)" , :size=>"27" %>
    </div>
  </div>
  </li>

  <li>
  <div class="field">
    <br />
    <label for="nowpass"><%= f.label :current_password, "現在のパスワード" %></label>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <div class="monokuma">
      <%= f.password_field :current_password, autocomplete: "off",
          :placeholder => "Password (6minimum characters)" , :size=>"27" %>
    </div>
  </div>
  </li>
</ul>


  <br/>
  <div class="actions">
    <%= f.submit "変更を保存" %>
  </div>

<% end %>

<br/>
<h3>アカウント消去</h3>

<p> <%= button_to "アカウント消去", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
</div>