
  <h3>ログイン</h3>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.text_field :user_name, :placeholder => "User name" ,  autofocus: true %>
    </div>

    <div class="field">
      <%= f.password_field :password, :placeholder => "Password (6minimum characters)" , autocomplete: "off" %>
    </div>



    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>


<%= render "devise/shared/links" %>





