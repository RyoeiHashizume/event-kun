<center>
  <div style="border: 1px solid #000; padding: 10px; width: 350px; height: 250px">
  <h3>ログイン</h3>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, :placeholder => "User name" ,  autofocus: true ,:size => 30 %>
    </div>

    <div class="field">
      <%= f.password_field :password, :placeholder => "Password (6minimum characters)" , autocomplete: "off" ,:size => 30 %>
    </div>



    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
</center>




