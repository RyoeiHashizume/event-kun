  <div calss="makeaccount" >
<div class="login">
  <h3>ログイン</h3>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.text_field :user_name, :placeholder => "User name" ,  autofocus: true , :size=>"27" %>
    </div>

    <div class="field">
      <%= f.password_field :password, :placeholder => "Password (6minimum characters)" , autocomplete: "off" , :size=>"27" %>
    </div>



    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>

</div>

  <%= render "devise/shared/links" %>
</div>



